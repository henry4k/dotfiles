" vim: set filetype=vim:
scriptencoding utf-8

set encoding=utf-8
set termencoding=utf-8
set nocompatible
set autochdir
syntax on
set expandtab
set smarttab
set tabstop=4
set shiftwidth=4
set number
set ruler
set showmode
set smartindent
set cindent
let g:c_space_errors=1
let g:c_curly_error=1
let g:c_comment_strings=1
let g:c_ansi_constants=1
let g:c_gnu=1
filetype on
filetype plugin on
filetype indent on
set hlsearch
set incsearch
set mouse=a
set noswapfile
set ttyfast
set wildignore+=*.o
set wildmode=list:longest,full
set nowrap
set list
set listchars=tab:>-,trail:-,extends:>,precedes:<
set backspace=2
set guioptions=a
set clipboard=unnamed,autoselect
set foldmethod=syntax
